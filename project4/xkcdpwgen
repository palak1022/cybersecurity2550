#!/usr/bin/env python3

import string
import random


word_file = "words.txt"
word_list = []
# fill up the word_list
with open(word_file, 'r') as words:
    for line in words:
        # remove white space and make everything lowercase
        word = line.strip().lower()

            word_list.append(word)

def generate(word = 4, digits_count=0, upper_count=0, special_count=0):
  
   words=random.choice(word_list)
   numbers = random.sample(string.digits, digits_count)
  symbols = random.sample(string.punctuation, special_count)
   caps = random.sample(string.ascii_uppercase, upper_count)
    password = list(words + caps + numbers + symbols)
    random.shuffle(password)
    return "".join(password)


def main():
    import argparse

    parser = argparse.ArgumentParser(description='Password generator')
    arser.add_argument("-w", '--words', type=int, default=4,
                        help='Password length.')

    parser.add_argument("-n", '--numbers', type=int, default=0,
                        help='Digits count.')
    parser.add_argument("-c", '--caps', type=int, default=0,
                        help='Uppper characters count.')
    parser.add_argument("-s", '--symbols', default=0,


    args = parser.parse_args()
    password = generate(
        word = args.word,
        upper_count=args.upper_count,
        digits_count=args.digits_count,
        special_count=args.special_count
    )

    print(password)


if __name__ == "__main__":
    main()
